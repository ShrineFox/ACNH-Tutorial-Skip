				# Hear, hear! We must assess this fossil to determine its origin. Shall I appraise it now?
				MainNpc.OpenMessageWindow('TalkSNpc/owl/SP_owl_00_Common:308', false)
				if EventFlowSystemActor.GeneralTalkChoice2() == 0:
					# Splendid! Let me take a look…
					MainNpc.OpenMessageWindow('TalkSNpc/owl/SP_owl_00_Common:310', false)
					run SNPC_owl_02_Museum_Judgment::Fossil_Check()
					run Sub_Event148()
				else:
					# As you wish. But do let me give it a look anytime. I am an appraisal professional, you know.
					MainNpc.OpenMessageWindow('TalkSNpc/owl/SP_owl_00_Common:309', false)
					run Commentary_End()
			case `Fossil`:
				# By my beak! What you have here is [a|an]<125:0:0000>!
				MainNpc.OpenMessageWindow('TalkSNpc/owl/SP_owl_00_Common:313', false)
				run Sub_Event148()
			case `FishOrDiveFish`:
				# Hoo, indeed, hoot! What a splendid <125:0:0000>!
				MainNpc.OpenMessageWindow('TalkSNpc/owl/SP_owl_00_Common:306', false)
				MainNpc.OwlOpenItemMessage()
				if MainNpc.OwlIsDonation('cUISelect'):
					switch EventFlowSystemActor.MuseumLevel():
						case `BlathersTent`:
							# I am quite eager to display the <125:0:0000> we have for the enjoyment of our patrons.
							MainNpc.OpenMessageWindow('TalkSNpc/owl/SP_owl_00_Common:366', false)
	run Commentary_End()
						case `BlathersMuseumNoArt`, `BlathersMuseumArt`, `BlathersCafe`:
							# We have this item on display in the museum at this very moment. Do feel free to take a look at your leisure.
							MainNpc.OpenMessageWindow('TalkSNpc/owl/SP_owl_00_Common:367', false)
	run Commentary_End()
						default:
							return
				else:
					# We are sorely lacking [a|an] <125:0:0000>, it pains me to say. I confess, I hold out hope you'll consider donating yours.
					MainNpc.OpenMessageWindow('TalkSNpc/owl/SP_owl_00_Common:368', false)
					run Commentary_End()
			case `PictureOrSculpture`:
				# Hoo, indeed, hoot! What a splendid <125:0:0000>!
				MainNpc.OpenMessageWindow('TalkSNpc/owl/SP_owl_00_Common:306', false)
				if MainNpc.OwlIsDonation('cUISelect'):
					# Details about each work of art can be found in front of their displays. Do look there for relevant information.
					MainNpc.OpenMessageWindow('TalkSNpc/owl/SP_owl_00_Common:315', false)
				else:
					# To the best of my knowledge, our collection does not yet include <50:1><125:0:0000>. Thus, it would be well and truly appreciated if you considered d…
					MainNpc.OpenMessageWindow('TalkSNpc/owl/SP_owl_00_Common:316', false)
				run Commentary_End()
			case `PictureFakeOrSculptureFake`:
				System.EventFlags['cLifeSupportAchievement:DonateFake'] = true
				# I say, might this be an original <125:0:0000>? But no! It cannot be… It is a fake! A complete and utter counterfeit!
				MainNpc.OpenMessageWindow('TalkSNpc/owl/SP_owl_00_Common:307', false)
				# There's a lot of bad art out there these days. One can't be too careful.
				MainNpc.OpenMessageWindow('TalkSNpc/owl/SP_owl_00_Common:351', false)
				run Commentary_End()
			default:
				return
	else:
		# Are you sure?<10:4> If there's anything you want to know, you have but to ask.
		MainNpc.OpenMessageWindow('TalkSNpc/owl/SP_owl_00_Common:303', true)

