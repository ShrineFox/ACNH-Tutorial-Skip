flow Init():
    MainNpc.NpcAISetting(0, true)
    MainNpc.NpcAISetting(1, true)
 
flow Root():
    if (MainNpc.NpcCheckStateSelectTiming('cInit')) and (EventFlowSystemActor.EnvHourCompare(0, -1, true, true) != 0):
        MainNpc.NpcChangeInvisibleState('cInvisible', '', 'SNPC_cml', 'Root', true, true, ArgInt0=0)
    else:
        MainNpc.NpcChangeBlockWanderState('cBlockWander', '', 'SNPC_cml', 'Root', true, true, ArgFlag0=false, ArgInt0=0, ArgInt1=1, ArgInt2=0, ArgInt3=0)
 
