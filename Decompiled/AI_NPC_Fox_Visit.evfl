flow Init():
	MainNpc.NpcChangeHeadCtrlMode('cPlayer', true)

flow Root():
	if System.EventFlags['cLand:FoxMovedToMarket']:
		MainNpc.NpcChangeInvisibleState('cInvisible', '', 'SNPC_fox', 'Root_Visit', true, true, ArgInt0=0)
	else:
		MainNpc.NpcChangeBlockWanderState('cBlockWander', '', 'SNPC_fox', 'Root_Visit', false, true, ArgFlag0=false, ArgInt0=0, ArgInt1=1, ArgInt2=0, ArgInt3=0)
