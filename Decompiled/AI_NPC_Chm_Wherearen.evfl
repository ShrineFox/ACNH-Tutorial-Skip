            run Disappear()
    elif MainNpc.NpcCheckStateSelectTimingMainNpc.NpcCheckStateSelectTiming('cInit'):
        MainNpc.SetNpcSpeakFlowMainNpc.SetNpcSpeakFlow('Demo_SchoolEvent', 'chm_Lesson')
