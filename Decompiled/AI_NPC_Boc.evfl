flow Init():
	MainNpc.NpcAISetting(0, true)
	MainNpc.NpcAISetting(1, true)

flow Root():
	if (MainNpc.NpcCheckStateSelectTiming('cInit')) and (EventFlowSystemActor.EnvHourCompare(12, -1, true, true) != 0):
		MainNpc.NpcChangeInvisibleState('cInvisible', '', 'SNPC_boc', 'Root', false, true, ArgInt0=0)
	else:
		MainNpc.NpcChangeBlockWanderState('cBlockWander', '', 'SNPC_boc', 'Root', false, true, ArgFlag0=false, ArgInt0=0, ArgInt1=1, ArgInt2=0, ArgInt3=0)
