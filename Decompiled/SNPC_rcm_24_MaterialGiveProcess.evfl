flow DeleteHardWood():
    EventFlowSystemActor.DeleteTargetItem(2769, 30, false)
    System.EventFlags['cLand:RcmShopMaterial_HardWood'] = true
 
flow DeleteIron():
    EventFlowSystemActor.DeleteTargetItem(2511, 30, false)
    System.EventFlags['cLand:RcmShopMaterial_Iron'] = true
 
flow DeleteSoftWood():
    EventFlowSystemActor.DeleteTargetItem(2767, 30, false)
    System.EventFlags['cLand:RcmShopMaterial_SoftWood'] = true
 
flow DeleteWood():
    EventFlowSystemActor.DeleteTargetItem(2768, 30, false)
    System.EventFlags['cLand:RcmShopMaterial_Wood'] = true
 
flow RewardProcess():
    MainNpc.NpcDecideRewardByCondition(5, 3000, false, true)
    MainNpc.SetItemName(1, 0, 0)
    MainNpc.SetDeliveryItem(1, true)
 
flow RewardProcess2():
    MainNpc.NpcDecideRewardByCondition(5, 3000, false, true)
    MainNpc.SetItemName(1, 0, 1)
    MainNpc.SetEventRewardToPlayerBaggage('cFree')
    run RewardProcess()
 
flow RewardProcess3():
    MainNpc.NpcDecideRewardByCondition(5, 3000, false, true)
    MainNpc.SetItemName(1, 0, 2)
    MainNpc.SetEventRewardToPlayerBaggage('cFree')
    run RewardProcess2()
 
flow Root():
    if EventFlowSystemActor.GeneralTalkChoice2() == 0:
        MainNpc.NpcDelivery(0, 'Default')
        switch SubflowResults@4[6]:
            case 0:
                switch SubflowResults@4[11]:
                    case 0:
                        run DeleteWood()
                    case 1:
                        run DeleteHardWood()
                    case 2:
                        run DeleteSoftWood()
                    case 3:
                        run DeleteIron()
                run SNPC_rcm_22_MaterialProgressChk::Rootrun SNPC_rcm_22_MaterialProgressChk::Root()
                if SubflowResults@5[0] in (1, 2, 3):
                    run RewardProcess()
            case 1:
                switch SubflowResults@6[12]:
                    case 0:
                        run DeleteWood()
                        run DeleteHardWood()
                    case 1:
                        run DeleteWood()
                        run DeleteSoftWood()
                    case 2:
                        run DeleteWood()
                        run DeleteIron()
                    case 3:
                        run DeleteHardWood()
                        run DeleteSoftWood()
                    case 4:
                        run DeleteHardWood()
                        run DeleteIron()
                    case 5:
                        run DeleteSoftWood()
                        run DeleteIron()
                run SNPC_rcm_22_MaterialProgressChk::Rootrun SNPC_rcm_22_MaterialProgressChk::Root()
                switch SubflowResults@5[0]:
                    case 2, 3:
                        run RewardProcess2()
                    case 4:
                        run RewardProcess()
                    default:
                        return
            case 2:
                switch SubflowResults@4[13]:
                    case 0:
                        run DeleteHardWood()
                        run DeleteSoftWood()
                        run DeleteIron()
                    case 1:
                        run DeleteWood()
                        run DeleteSoftWood()
                        run DeleteIron()
                    case 2:
                        run DeleteWood()
                        run DeleteHardWood()
                        run DeleteIron()
                    case 3:
                        run DeleteWood()
                        run DeleteHardWood()
                        run DeleteSoftWood()
                run SNPC_rcm_22_MaterialProgressChk::Rootrun SNPC_rcm_22_MaterialProgressChk::Root()
                switch SubflowResults@5[0]:
                    case 3:
                        run RewardProcess3()
                    case 4:
                        run RewardProcess2()
                    default:
                        return
            case 3:
                run DeleteWood()
                run DeleteHardWood()
                run DeleteSoftWood()
                run DeleteIron()
                run RewardProcess3()
    else:
        # That's fine! There's no pressure. Just feel free to donate whatever you can whenever you want.
        MainNpc.OpenMessageWindow('TalkSNpc/rcm/SP_rcm_02_TentRequest:054', false)
        EventFlowSystemActor.ExitFlowchartEventFlowSystemActor.ExitFlowchart()
 
